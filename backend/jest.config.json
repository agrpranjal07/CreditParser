{
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.js"],
  "transform": {},
  "extensionsToTreatAsEsm": [".js"],
  "globals": {
    "jest": {
      "useESM": true
    }
  },
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/tests/**",
    "!server.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}
